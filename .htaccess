<IfModule mod_expires.c>
  ExpiresActive On

  # HTML: short-lived so updates propagate quickly
  ExpiresByType text/html "access plus 1 hour"

  # CSS and JS: cache for a month
  ExpiresByType text/css "access plus 1 month"
  ExpiresByType application/javascript "access plus 1 month"
  ExpiresByType application/x-javascript "access plus 1 month"

  # Images & media: long cache (1 year)
  ExpiresByType image/avif "access plus 1 year"
  ExpiresByType image/webp "access plus 1 year"
  ExpiresByType image/png "access plus 1 year"
  ExpiresByType image/jpg "access plus 1 year"
  ExpiresByType image/jpeg "access plus 1 year"
  ExpiresByType image/gif "access plus 1 year"
  ExpiresByType image/svg+xml "access plus 1 year"

  # Fonts: long cache
  ExpiresByType font/woff2 "access plus 1 year"
  ExpiresByType font/woff "access plus 1 year"
  ExpiresByType application/font-woff "access plus 1 year"
  ExpiresByType application/vnd.ms-fontobject "access plus 1 year"

  # Other static assets
  ExpiresByType application/pdf "access plus 1 year"
</IfModule>

<IfModule mod_headers.c>
  # Strong caching for fingerprinted assets - files with hashes should be served with long max-age
  <FilesMatch "\.(?:css|js|png|jpg|jpeg|gif|webp|avif|svg|woff2|woff|ttf)$">
    Header set Cache-Control "public, max-age=31536000, immutable"
  </FilesMatch>

  # HTML: revalidate more frequently
  <FilesMatch "\.(?:html|htm)$">
    Header set Cache-Control "public, max-age=3600, must-revalidate"
  </FilesMatch>
</IfModule>

# Prevent caching of server-side includes or dynamic endpoints (if any)
<FilesMatch "^server-.*">
  Header set Cache-Control "no-store, no-cache, must-revalidate"
</FilesMatch>
